{
    "name": "midnight/easy-graphql",
    "type": "library",
    "description": "An easy way to build a GraphQL API",
    "license": "MIT",
    "authors": [
        {
            "name": "Rudolph Gottesheim",
            "email": "r.gottesheim@midnight-design.at"
        }
    ],
    "require": {
        "php": "^7.3",
        "webonyx/graphql-php": "^0.13.8",
        "psr/http-message": "^1.0",
        "psr/http-factory": "^1.0",
        "psr/container": "^1.0"
    },
    "require-dev": {
        "localheinz/composer-normalize": "^1.3",
        "phpunit/phpunit": "^8.4",
        "eventjet/coding-standard": "^3.0",
        "zendframework/zend-diactoros": "^2.1",
        "ext-json": "^1.7"
    },
    "autoload": {
        "psr-4": {
            "Midnight\\EasyGraphQl\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Midnight\\EasyGraphQl\\Test\\": "tests"
        }
    },
    "minimum-stability": "stable"
}
